       " ",
       "The Papers We Love logo, site content and design is",
       "Copyright (c) 2017 Papers We Love LLC, all rights reserved"
     ];
     console.log(a.join("\n"));
    </script>
    <script type="application/ld+json">
      {
      "@context": "http://schema.org/",
      "@type": "WebPage",
      "name": "<%= og_title %>",
      "description": "<%= description %>",
      "image": "<%= og_image %>",
      "publisher": {
      "@type": "Organization",
      "name": "Papers We Love",
      "url": "http://paperswelove.org"
      }<% unless og_video.nil? %>,
      "video": {
      "@context": "http://schema.org/",
      "@type": "VideoObject",
      "name": "<%= og_video_title %>",
      "@id": "<%= og_video_url %>",
      "datePublished": "<%= og_video_date %>",
      "uploadDate": "<%= og_video_uploaddate %>",
      "description": "<%= og_video_description %>",
      "thumbnailUrl": "<%= og_video_thumbnail %>",
      "author": {
      "@type": "Person",
      "name": "<%= og_video_author %>"
      }
      }<% end %>
      }
    </script>
    <script type="application/ld+json">
