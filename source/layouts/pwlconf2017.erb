<%
description = 'September 28, 2017 in St. Louis, Missouri'
title = 'PWLConf 2017'
og_image = 'http://pwlconf.org/images/pwlconf-2017@2x.png'
og_title = 'Papers We Love Conference 2017'
og_width = 770
og_height = 830
og_image_type = 'image/png'
og_video = nil
og_video_title = nil
og_video_url = nil
og_video_date = '09/28/2017'
og_video_uploaddate = '09/28/2017'
og_video_author = 'Papers We Love'

unless current_page.data.title.nil?
  title = "#{title} | #{current_page.data.title}"
end

unless current_page.data.og_title.nil?
  og_title = current_page.data.og_title
end

unless current_page.data.description.nil?
  description = current_page.data.description
end

unless current_page.data.og_image.nil?
  og_width = current_page.data.og_width
  og_height = current_page.data.og_height
  og_image = current_page.data.og_image
end

unless current_page.data.og_image_type.nil?
  og_image_type = current_page.data.og_image_type
end

unless current_page.data.og_video.nil?
  og_video = true
  og_video_title = current_page.data.og_video_title
  og_video_url = current_page.data.og_video_url
  og_video_description = current_page.data.og_video_description
  og_video_thumbnail = current_page.data.og_video_thumbnail
end

unless current_page.data.og_video_date.nil?
  og_video_date = current_page.data.og_video_date
end

unless current_page.data.og_video_author.nil?
  og_video_author = current_page.data.og_video_author
end
%>
<!doctype html>
<html prefix="og: http://ogp.me/ns#" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta content="width=device-width, initial-scale=1" name="viewport">

    <title><%= title %></title>
    <meta name="description" content="<%= description %>" />

    <meta name="fb:description" content="<%= description %>" />
    <meta name="fb:image" content="<%= og_image %>">
    <meta name="fb:image:type" content="<%= og_image_type %>">
    <meta name="fb:image:width" content="<%= og_width %>">
    <meta name="fb:image:height" content="<%= og_height %>">

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@papers_we_love" />
    <meta name="twitter:title" content="<%= og_title %>" />
    <meta name="twitter:description" content="<%= description %>" />

    <meta name="og:site_name" content="<%= og_title %>" />
    <meta name="og:description" content="<%= description %>" />
    <meta name="og:image" content="<%= og_image %>">
    <meta name="og:image:type" content="<%= og_image_type %>">
    <meta name="og:image:width" content="<%= og_width %>">
    <meta name="og:image:height" content="<%= og_height %>">
    <meta name="og:locale" content="en_us">
    <meta name="og:url" content="http://pwlconf.org<%= current_page.url %>">

    <meta name="google-site-verification" content="aMC4-woz3t3pTn9EbEL4wIUkYtnYddGFNGee-sqQNb0" />
    <%= stylesheet_link_tag "pwlconf2017" %>
    <%= favicon_tag 'favicon.ico' %>
    <link href="/images/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <script>
  	 (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  	   (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  	   m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  	 })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

     ga('create', 'UA-53240153-2', 'auto');
  	 ga('send', 'pageview');
    </script>
    <script
      src="http://code.jquery.com/jquery-2.2.4.min.js"
      integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
      crossorigin="anonymous"></script>
  </head>
  <body>
    <div id="main" role="main">
      <%= yield %>
      <%= partial '2017/partials/footer' %>
    </div>

    <script>
     var a = [
       "Brought to you by Papers We Love - http://paperswelove.org/",
       " ",
       "Logo design courtesy of https://twitter.com/jessicaspacekat",
       "Illustration courtesy of https://twitter.com/imnikkilee",
       "HTML and all that jazz banged out by https://twitter.com/d_run",
