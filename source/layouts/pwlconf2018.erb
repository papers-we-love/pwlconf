<%
description = 'September 26, 2018 in St. Louis, Missouri'
title = 'PWLConf 2018'
og_image = 'https://pwlconf.org/images/2018/mobile-header-solid.png'
og_title = 'Papers We Love Conference 2018'
og_width = 1625
og_height = 1101
og_image_type = 'image/png'
og_image_alt = 'Drawing of the Stifel Theatre in St. Louis'
og_video = nil
og_video_title = nil
og_video_url = nil
og_video_date = '09/26/2018'
og_video_uploaddate = '09/26/2018'
og_video_author = 'Papers We Love'

unless current_page.data.title.nil?
  title = "#{title} | #{current_page.data.title}"
end

unless current_page.data.og_title.nil?
  og_title = current_page.data.og_title
end

unless current_page.data.description.nil?
  description = current_page.data.description + ' | ' + description
end

unless current_page.data.og_image.nil?
  og_width = current_page.data.og_width
  og_height = current_page.data.og_height
  og_image = current_page.data.og_image
  og_image_alt = current_page.data.og_image_alt
end

unless current_page.data.og_image_type.nil?
  og_image_type = current_page.data.og_image_type
end

unless current_page.data.og_video.nil?
  og_video = true
  og_video_title = current_page.data.og_video_title
  og_video_url = current_page.data.og_video_url
  og_video_description = current_page.data.og_video_description
  og_video_thumbnail = current_page.data.og_video_thumbnail
end

unless current_page.data.og_video_date.nil?
  og_video_date = current_page.data.og_video_date
end

unless current_page.data.og_video_author.nil?
  og_video_author = current_page.data.og_video_author
end
%>
<!doctype html>
<html prefix="og: http://ogp.me/ns#" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta content="width=device-width, initial-scale=1" name="viewport">

    <title><%= title %></title>
    <meta name="description" content="<%= description %>" />

    <meta name="og:type" content="website">
    <meta name="og:title" content="<%= og_title %>">
    <meta name="og:url" content="https://pwlconf.org<%= current_page.url %>">
    <meta name="og:site_name" content="PWLConf" />
    <meta name="og:description" content="<%= description %>" />
    <meta name="og:image" content="<%= og_image %>">
    <meta name="og:image:type" content="<%= og_image_type %>">
    <meta name="og:image:width" content="<%= og_width %>">
    <meta name="og:image:height" content="<%= og_height %>">
    <meta name="og:image:alt" content="<%= og_image_alt %>" />
    <meta name="og:locale" content="en_US">
    <% unless og_video.nil? %>,
      <meta name="og:video" content="<%= og_video_url %>">
    <% end %>

    <meta name="fb:description" content="<%= description %>" />
    <meta name="fb:image" content="<%= og_image %>">
    <meta name="fb:image:type" content="<%= og_image_type %>">
    <meta name="fb:image:width" content="<%= og_width %>">
    <meta name="fb:image:height" content="<%= og_height %>">

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@papers_we_love" />
    <meta name="twitter:title" content="<%= og_title %>" />
    <meta name="twitter:description" content="<%= description %>" />
    <meta name="twitter:image:alt" content="<%= og_image_alt %>" />
    <meta name="twitter:image" content="<%= og_image %>">

    <meta name="google-site-verification" content="aMC4-woz3t3pTn9EbEL4wIUkYtnYddGFNGee-sqQNb0" />
    <script defer src="https://use.fontawesome.com/releases/v5.0.12/js/all.js" integrity="sha384-Voup2lBiiyZYkRto2XWqbzxHXwzcm4A5RfdfG6466bu5LqjwwrjXCMBQBLMWh7qR" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag "pwlconf2018" %>
    <%= favicon_tag 'favicon.ico' %>
    <link href="/images/favicon.ico" rel="shortcut icon" type="image/x-icon" />
  </head>
  <body>
    <div id="main" role="main">
      <%= yield %>
      <%= partial '2018/partials/footer' %>
    </div>
    <script>
     (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
       (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
       m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
     })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

     ga('create', 'UA-53240153-2', 'auto');
     ga('send', 'pageview');
    </script>
    <script>
     var a = [
       "Brought to you by Papers We Love (SM) - http://paperswelove.org/",
       " ",
       "Logo design courtesy of https://twitter.com/jessicaspacekat",
       "Illustration courtesy of https://twitter.com/imnikkilee",
       "HTML and all that jazz banged out by https://twitter.com/d_run",
       "Copy editing and oversight from https://twitter.com/alazyreader",
       " ",
       "The Papers We Love and PWLConf logo, site content and design is",
       "Copyright (c) 2018 Papers We Love Ltd, all rights reserved"
     ];
     console.log(a.join("\n"));
    </script>
    <script type="application/ld+json">
     {
       "@context": "http://schema.org/",
       "@type": "WebPage",
       "name": "<%= og_title %>",
       "description": "<%= description %>",
       "image": "<%= og_image %>",
       "publisher": {
         "@type": "Organization",
         "name": "Papers We Love",
         "url": "http://paperswelove.org"
       }<% unless og_video.nil? %>,
       "video": {
         "@context": "http://schema.org/",
         "@type": "VideoObject",
         "name": "<%= og_video_title %>",
         "@id": "<%= og_video_url %>",
         "datePublished": "<%= og_video_date %>",
         "uploadDate": "<%= og_video_uploaddate %>",
         "description": "<%= og_video_description %>",
         "thumbnailUrl": "<%= og_video_thumbnail %>",
         "author": {
           "@type": "Person",
           "name": "<%= og_video_author %>"
         }
       }<% end %>
     }
    </script>
    <script type="application/ld+json">
     {
       "@context": "http://schema.org/",
       "@type": "Event",
       "name": "PWLConf 2018",
       "url": "https://pwlconf.org",
       "startDate": "2018-09-26T09:00",
       "endDate": "2018-09-26T17:00",
       "description": "Papers We Love Conference 2018",
       "image": "https://pwlconf.org/images/2018/mobile-header-solid.png",
     ],
       "location": {
         "@type": "Place",
         "name": "Stifel Theatre",
         "url": "http://www.stifeltheatre.com",
         "address": {
           "@type": "PostalAddress",
           "addressLocality": "St. Louis",
           "addressRegion": "MO",
           "streetAddress": "1400 Market St.",
           "postalCode": "63103",
           "telephone": "314-499-7600"
         },
         "hasMap": "https://goo.gl/maps/GjqD4T8NkLT2"
       }
     }
    </script>
  </body>
</html>
